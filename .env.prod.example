# Appwrite Production Environment Variables for Dokploy
# Rename this file to .env or copy these values to Dokploy's Environment Variables section

_APP_ENV=production
_APP_WORKER_PER_CORE=6

# Domain Configuration
_APP_DOMAIN=api.indobase.fun
_APP_DOMAIN_TARGET=api.indobase.fun
_APP_CONSOLE_DOMAIN=console.indobase.fun
_APP_CONSOLE_HOSTNAMES=console.indobase.fun,localhost

# Security Secrets (CHANGE THESE!)
_APP_OPENSSL_KEY_V1=your-random-secret-key-at-least-32-chars
_APP_EXECUTOR_SECRET=your-random-secret-key-at-least-32-chars

# Database Configuration
_APP_DB_HOST=mariadb
_APP_DB_PORT=3306
_APP_DB_SCHEMA=appwrite
_APP_DB_USER=appwrite
_APP_DB_PASS=password
_APP_DB_ROOT_PASS=rootpassword

# Redis Configuration
_APP_REDIS_HOST=redis
_APP_REDIS_PORT=6379

# Email Configuration (SMTP)
_APP_SMTP_HOST=smtp.example.com
_APP_SMTP_PORT=587
_APP_SMTP_SECURE=tls
_APP_SMTP_USERNAME=your-email@example.com
_APP_SMTP_PASSWORD=your-password
_APP_SYSTEM_EMAIL_NAME=Appwrite
_APP_SYSTEM_EMAIL_ADDRESS=team@appwrite.io

# Storage Configuration
_APP_STORAGE_LIMIT=10485760 # 10MB
_APP_STORAGE_ANTIVIRUS=disabled

# Runtimes
_APP_FUNCTIONS_RUNTIMES=node-18.0,php-8.1,python-3.10,ruby-3.1,go-1.19,java-17.0

# Maintenance
_APP_MAINTENANCE_INTERVAL=86400

# Usage Stats
_APP_USAGE_STATS=enabled
